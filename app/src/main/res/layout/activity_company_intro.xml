<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="@drawable/list_t_style">
        <ImageButton
            android:id="@+id/ib_home5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/tv_com"
                    android:textSize="25dp"
                    android:text="公司:"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/tv_add"
                    android:textSize="25dp"
                    android:text="地址:"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:textSize="25dp"
                    android:text="電話:"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/tv_mail"
                    android:textSize="25dp"
                    android:text="Email:"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/tv_introduce"
                    android:textSize="25dp"
                    android:text="簡介:"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/tv_off"
                    android:textSize="25dp"
                    android:text="職位:"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/tv_salary"
                    android:textSize="25dp"
                    android:text="薪資:"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/tv_present"
                    android:textSize="25dp"
                    android:text="介紹:"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/tv_ability"
                    android:textSize="25dp"
                    android:text="專業技能"
                    android:paddingBottom="8dp"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="5dp"
        android:background="@drawable/list_b_style">
        <ImageButton
            android:id="@+id/ib_list1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/idcard" />
        <ImageButton
            android:id="@+id/ib_list2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/favorites" />
        <ImageButton
            android:id="@+id/ib_list3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/cv" />

    </LinearLayout>
</LinearLayout>